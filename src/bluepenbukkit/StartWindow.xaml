<Window x:Class="bluepenbukkit.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bluepenbukkit"
        mc:Ignorable="d"
        Title="StartWindow" MinHeight="450" MinWidth="800" Height="450" Width="800" Foreground="{x:Null}" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown" AllowsTransparency="True" Background="{x:Null}" WindowStartupLocation="CenterOwner">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Border Background="#FF282828" CornerRadius="0,15,15,0" Margin="150,0,0,0">
            <Grid x:Name="WindowGird" SizeChanged="WindowGird_SizeChanged"/>
        </Border>
        <Border CornerRadius="15,0,0,15" Background="#FF2D2D2D" HorizontalAlignment="Left" Width="150" />
    </Grid>
</Window>
